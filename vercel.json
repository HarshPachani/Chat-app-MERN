{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "!client/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "installCommand": "npm install",
    "buildCommand": "npm run build"
  }
}
